<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="~/Content/css/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/select2.min.css" rel="stylesheet" type="text/css" />

    <script src="~/Content/js/modernizr-2.8.3.js"></script>
    <script src="~/Content/js/jquery-3.1.1.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Brackets</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dropdown <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-submenu">
                                <a href="#" tabindex="-1">Admin</a>
                                <ul class="dropdown-menu">
                                    <li><a tabindex="-1" href="/Admin/Team">Team</a></li>
                                    <li><a tabindex="-1" href="#">Player</a></li>
                                </ul>
                            </li>
                            <li><a href="#">--</a></li>
                            <li><a href="#">--</a></li>
                            <li class="divider"></li>
                            <li class="dropdown-header">Nav header</li>
                            <li><a href="#">--</a></li>
                            <li><a href="#">--</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br />
        <div class="alert alert-info" id="alertMessage" hidden="hidden">
            <strong id="msg-title">Placeholder:</strong>
            <ul id="msg-content"></ul>
        </div>
        <br />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/select2.min.js"></script>
    <script src="~/Content/js/validator.min.js"></script>
    <script src="~/Content/js/mainSite.js"></script>
</body>
</html>